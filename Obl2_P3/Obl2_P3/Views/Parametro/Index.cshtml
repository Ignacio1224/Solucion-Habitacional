@model IEnumerable<Dominio.Clases.Parametro>

@{
    ViewBag.Title = "Parámetros";
    ViewBag.ActiveMenuItem = "parametro";

    bool jefeLogged = false;
    if (Session["userRole"].ToString() == "jefe") { jefeLogged = true; }
}

<h2>Parámetros</h2>

<div class="@ViewBag.message[0]" style="@ViewBag.message[1]">
    @ViewBag.message[2]
</div>

@if (jefeLogged)
{
    <form action="/Parametro/Import" method="post" style="margin-bottom: 2em;">
        <button type="submit" class="btn btn-primary">Importar</button>
    </form>
}

<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th></th>
    </tr>
    @if (Model == null)
    {
        <tr>
            <th>No hay datos.</th>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre_parametro)
                </td>
                <td>
                    @Html.ActionLink("Detalles", "Details", new { id = item.nombre_parametro })
                </td>
            </tr>
        }
    }

</table>
